<%- include("partials/header") %>

<div class="ui text main container segment">
  <div class="ui huge header">Blogs</div>
  <div class="ui divided items">
    <% blogs.forEach(function(blog){ %>
    <div class="item">
      <div class="image">
        <img src="<%= blog.image %>">
      </div>
      <div class="content">
        <a class="header"><%= blog.title %></a>
        <div class="meta">
          <span class="cinema"><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%= blog.body.substring(0,100); %></p>
        </div>
        <div class="extra">
          <a href="/blogs/<%=blog._id %>" id="morebutton" class="ui floated basic black button">
            Read More
            <i class="right chevron icon"></i>
          </a>
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</div>


<%- include("partials/footer") %>